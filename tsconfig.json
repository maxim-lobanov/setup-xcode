{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "outDir": "./lib",
      "rootDir": "./src",
      "esModuleInterop": true,
  
      /* Strict Type-Checking Options */
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
  
      /* Additional Checks */
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "./__tests__/**/*.ts"]
  }